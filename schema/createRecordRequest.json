{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schema://createRecordRequest.json",
    "title": "createRecordRequest",
    "operationId": "createRecordRequest",
    "description": "Create Record Request",
    "type": "object",
    "properties": {
        "userEmail": {
            "type": "string",
            "description": "Email of the User",
            "maxLength": 100,
            "minLength": 0,
            "pattern": "(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])"
        },
        "date": {
            "type": "string",
            "description": "Date of the Record",
            "examples": [
                "2010-12-20"
            ],
            "minLength": 10,
            "maxLength": 10
        },
        "time": {
            "type": "string",
            "description": "Time of the Record",
            "examples": [
                "10:35:10"
            ],
            "minLength": 8,
            "maxLength": 8
        },
        "text": {
            "type": "string"
        },
        "numberOfCalories": {
            "type": "number",
            "description": "Number of calories for the whole record"
        }
    },
    "additionalProperties": false,
    "required": [
        "userEmail",
        "date",
        "time",
        "text"
    ]
}